<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
		<%- include( 'layouts/head'); -%>
  </head>
<body>
    <div class="container">
        <%- include( 'layouts/navbar', {nav: "<li class='active'><a href='/books'>Books</a></li><li><a href='/authors'>Authors</a></li><li><a href='/publishers'>Publishers</a></li><li><a href='/genres'>Genres</a></li>"}); -%>
        <h1><%= title %></h1>
            <%if (books.length> 0) { %>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Genre</th>
                            <th>Pages</th>
                            <th>Year</th>
                            <th>Publisher</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% i=1 %>
                            <% (books).forEach(function(book){ %>
                                <%if (typeof book !='undefined' ) { %>
                                    <tr>
                                        <td><%=i ++ %></td>
                                        <td><%=book.title %></td>
                                        <td><%=book.firstName + " " %> <%=book.lastName %></td>
                                        <td><%=book.genre %></td>
                                        <td><%=book.pages %></td>
                                        <td><%=book.year %></td>
                                        <td><%=book.publisher %></td>
                                    </tr>
                                <% } %>
                            <% });%>
                    </tbody>
                </table>
            <% } %>
    </div>
</body>


</html>
