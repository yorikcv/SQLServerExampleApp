<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
		<%- include( 'layouts/head'); -%>
  </head>
<body>
    <div class="container">
        <%- include( 'layouts/navbar', {nav: "<li><a href='/books'>Books</a></li><li><a href='/authors'>Authors</a></li><li><a href='/publishers'>Publishers</a></li><li class='active'><a href='/genres'>Genres</a></li>"}); -%>
        <h1><%= title %></h1>
            <%if (genres.length> 0) { %>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% i=1 %>
                            <% (genres).forEach(function(genre){ %>
                                <%if (typeof genre !='undefined' ) { %>
                                    <tr>
                                        <td><%=i ++ %></td>
                                        <td><%=genre.title%></td>
                                    </tr>
                                <% } %>
                            <% });%>
                    </tbody>
                </table>
            <% } %>
    </div>
</body>

</html>
